{
  "name": "postcss-generate-asset-php",
  "version": "0.0.1",
  "description": "Generate a PHP file with an array of asset information",
  "scripts": {
    "test": "jest --coverage && eslint ."
  },
  "author": "jeremyfelt",
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.4.18"
  },
  "devDependencies": {
    "clean-publish": "^4.0.1",
    "eslint": "^8.27.0",
    "eslint-plugin-jest": "^27.1.4",
    "jest": "^29.3.0",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.18",
    "simple-git-hooks": "^2.8.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "dependencies": {
    "json2php": "^0.0.5"
  }
}
